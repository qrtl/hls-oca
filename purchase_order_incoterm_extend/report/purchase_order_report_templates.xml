<?xml version="1.0" ?>
<odoo>
    <template
        id="report_purchaseorder_document_inherit_purchase_order"
        inherit_id="purchase.report_purchaseorder_document"
    >
        <xpath expr="//div[@t-if='o.date_order']" position="after">
            <div t-if="o.incoterm_id" class="col-3 bm-2">
                <strong>Incoterms:</strong>
                <p t-field="o.incoterm_id" class="m-0"/>
                <p t-field="o.incoterm_place" t-if="o.incoterm_place" class="m-0"/>
            </div>
        </xpath>
    </template>
</odoo>
